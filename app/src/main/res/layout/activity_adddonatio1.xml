<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdddonatioActivity1">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="166dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_card"
                android:backgroundTint="@color/white"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="24dp"
                android:paddingBottom="16dp">

                <!-- Top Bar -->
                <LinearLayout
                    android:layout_width="316dp"
                    android:layout_height="51dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="32dp"
                        android:layout_height="26dp"
                        android:src="@drawable/back"
                        app:tint="@color/black" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    <!-- Menu Icon -->
                    <ImageView
                        android:id="@+id/menu_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_menu"
                        app:tint="@color/black" />


                    <ImageView
                        android:id="@+id/notification_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_notification"
                        app:tint="@color/black" />

                </LinearLayout>


                <TextView
                    android:id="@+id/welcome_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/fonth"
                    android:text="Post a Donation"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/sub_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/font2"
                    android:text="Little Things Can Make a Big Impact"
                    android:textColor="@color/light_gray"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="353dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@drawable/search_bg"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">


                <EditText
                    android:id="@+id/search_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Search"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


                <ImageView
                    android:id="@+id/search_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@drawable/ic_search"
                    app:tint="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="820dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:radius="12dp">


                <ImageView
                    android:id="@+id/foodImageView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shawarama" />

                <Button
                    android:id="@+id/chooseImageButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="@color/prclr"
                    android:text="Choose Image"
                    android:textColor="@color/white" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/card_background"
                    android:fontFamily="@font/font2"
                    android:hint="Enter Food Name (e.g., Rice and Curry)"
                    android:padding="12dp" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/card_background"
                    android:fontFamily="@font/font2"
                    android:gravity="top"
                    android:hint="Enter Food Description (e.g., Freshly cooked vegetarian meal)"
                    android:minHeight="80dp"
                    android:padding="12dp" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/card_background"
                    android:fontFamily="@font/font2"
                    android:hint="Enter Quantity (e.g., Serves 4)"
                    android:inputType="number"
                    android:padding="12dp" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/card_background"
                    android:fontFamily="@font/font2"
                    android:hint="Food Expiry Time (e.g., 3 hours)"
                    android:padding="12dp" />


                <EditText
                    android:layout_width="341dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/card_background"
                    android:fontFamily="@font/font2"
                    android:hint="Enter Pickup Location (e.g., 123 Street, Near Market)"
                    android:padding="12dp" />


                <Button
                    android:layout_width="344dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/prclr"
                    android:fontFamily="@font/font2"
                    android:text="Post Food Donation"
                    android:textColor="@color/white" />
            </LinearLayout>




        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="356dp"
        android:layout_height="73dp"
        android:background="@drawable/bottom_nav_background"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_home"
                app:tint="@color/nav_unselected" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/nav_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_location"
                app:tint="@color/nav_unselected" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_main_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/floating_button_bg"
            android:elevation="10dp"
            android:gravity="center"
            android:padding="12dp">

            <ImageView
                android:id="@+id/center_action"
                android:layout_width="34dp"
                android:layout_height="83dp"
                android:src="@drawable/ic_add"
                app:tint="@color/white" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/nav_favorites"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/favorites_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_favorites"
                app:tint="@color/nav_unselected" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_profile"
                app:tint="@color/nav_unselected" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>